
@{
    ViewBag.Title = "NewEmployee";
}

<h2>NewEmployee</h2>

@using (Html.BeginForm())
{
    <div class="container">
        <table class="table">
            <tr>
                <th>First Name</th>
                <td>
                    @Html.TextBox("firstname")
                </td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>
                    @Html.TextBox("lastname")
                </td>
            </tr>
            <tr>
                <th>Mobile Number</th>
                <td>
                    @Html.TextBox("designation")
                </td>
            </tr>
            <tr>
                <th>Address</th>
                <td>
                    @Html.TextBox("address")
                </td>
            </tr>
            <tr>
                <th>Select Technical Skills</th>
                <td>
                    <input type="checkbox" value="C" name="technicalskills" /> C
                    <input type="checkbox" value="C++" name="technicalskills" /> C++
                    <input type="checkbox" value="C#" name="technicalskills" /> C#
                    <input type="checkbox" value="PHP" name="technicalskills" /> PHP
                    <input type="checkbox" value="JAVA" name="technicalskills" /> JAVA
                    <input type="checkbox" value="HTML" name="technicalskills" /> HTML
                    <input type="checkbox" value="CSS" name="technicalskills" /> CSS
                    <input type="checkbox" value="JavaScript" name="technicalskills" /> JavaScript
                    <input type="checkbox" value="MVC5" name="technicalskills" /> MVC
                </td>
            </tr>
            <tr>
                <th>Currently Working as a Employee in organization?</th>
                <td>
                    @Html.DropDownList("Options")
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Submit" />
                </td>
            </tr>
        </table>

    </div>
}