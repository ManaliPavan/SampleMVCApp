
@{
    ViewBag.Title = "ShowAllEmployee";
}

<h2>ShowAllEmployee</h2>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Employee Name</th>
                <th>Designation</th>
                <th>Salary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (SampleMVCApp.Models.Employee employee in ViewBag.EmpList)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.EmpName</td>
                    <td>@employee.Designation</td>
                    <td>@employee.Salary</td>
                </tr>
            }
        </tbody>
    </table>

