
@{
    ViewBag.Title = "PersonalDetails";
}

<h2>personalDetails</h2>

@using (Html.BeginForm())  //similiar as <form></form> tag
{
    <div class="container">
        <table class="table">
            <tr>
                <th>First Name</th>
                <td>
                    <!--at-d-ret html is given by helper methods to write html tags  this is similiar as <input type="text" />-->
                    @Html.TextBox("firstname")
                </td>
                </tr>
                <tr>
                    <th>Last Name</th>
                    <td>
                        @Html.TextBox("lastname")
                    </td>
                </tr>
                <tr>
                    <th>Mobile Number</th>
                    <td>
                        @Html.TextBox("phone")
                    </td>
                </tr>
                <tr>
                    <th>Select Gender</th>
                    <td>
                        @Html.RadioButton("Gender", "Male") Male <!-- is similiar as <input type="radio" />-->
                        @Html.RadioButton("Gender", "Female") Female
                    </td>
                </tr>
                <tr>
                    <th>Select Hobbies</th>
                    <td>
                        <input type="checkbox" value="Reading" name="hobbies" /> Reading
                        <input type="checkbox" value="Music" name="hobbies" /> Music
                        <input type="checkbox" value="Sports" name="hobbies" /> Sports
                    </td>
                </tr>
                <tr>
                    <th>Would you like to participate in survey ?</th>
                    <td>
                        @Html.DropDownList("Options");
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" value="Submit" />  <!--after submitting it will go to controller and seaarch for http post req.-->
                    </td>
                </tr>
            </table>

        </div>

    }
